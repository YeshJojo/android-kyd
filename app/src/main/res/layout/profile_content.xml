<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    tools:showIn="@layout/profile_layout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            style="@style/headerText"
            android:text="Account Info"
            android:layout_marginBottom="20dp"/>
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/nameImageView"
                android:src="@drawable/proname"
                style="@style/profileDetailsImage" />
            <TextView
                android:id="@+id/nameTextView"
                android:text="Name"
                android:layout_toEndOf="@id/nameImageView"
                style="@style/profileDetailsTextMain" />
            <TextView
                android:id="@+id/text_name1"
                android:layout_toEndOf="@id/nameImageView"
                style="@style/profileDetailsMiniText" />
        </RelativeLayout>
        <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/mobileImageView"
                android:src="@drawable/promobile"
                style="@style/profileDetailsImage" />
            <TextView
                android:text="Mobile"
                android:layout_toEndOf="@id/mobileImageView"
                style="@style/profileDetailsTextMain"/>
            <TextView
                android:id="@+id/text_phone"
                android:layout_toEndOf="@id/mobileImageView"
                style="@style/profileDetailsMiniText" />
        </RelativeLayout>
        <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/emailImageView"
                android:src="@drawable/proemail"
                style="@style/profileDetailsImage" />
            <TextView
                android:text="Email"
                android:layout_toEndOf="@id/emailImageView"
                style="@style/profileDetailsTextMain" />
            <TextView
                android:id="@+id/text_email1"
                android:layout_toEndOf="@id/emailImageView"
                style="@style/profileDetailsMiniText" />
        </RelativeLayout>
        <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/addressImageView"
                android:src="@drawable/proaddress"
                style="@style/profileDetailsImage" />
            <TextView
                android:id="@+id/location_txt"
                android:text="Location"
                android:layout_toEndOf="@id/addressImageView"
                style="@style/profileDetailsTextMain" />
            <TextView
                android:id="@+id/text_location"
                android:layout_below="@+id/location_txt"
                android:layout_toEndOf="@id/addressImageView"
                style="@style/profileDetailsMiniText" />
        </RelativeLayout>
        <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/bloodImageView"
                android:src="@drawable/problood"
                style="@style/profileDetailsImage" />
            <TextView
                android:text="Blood Group"
                android:layout_toEndOf="@id/bloodImageView"
                style="@style/profileDetailsTextMain" />
            <TextView
                android:id="@+id/text_blood"
                android:layout_toEndOf="@id/bloodImageView"
                style="@style/profileDetailsMiniText" />
        </RelativeLayout>
        <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/dobImageView"
                android:src="@drawable/prodob"
                style="@style/profileDetailsImage" />
            <TextView
                android:text="D.O.B"
                android:layout_toEndOf="@id/dobImageView"
                style="@style/profileDetailsTextMain" />
            <TextView
                android:id="@+id/dob"
                android:layout_toEndOf="@id/dobImageView"
                style="@style/profileDetailsMiniText" />
        </RelativeLayout>
        <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/healthImageView"
                android:src="@drawable/proname"
                style="@style/profileDetailsImage" />
            <TextView
                android:id="@+id/healthTextView"
                android:text="Health Condition"
                android:layout_toEndOf="@id/healthImageView"
                style="@style/profileDetailsTextMain" />
            <TextView
                android:id="@+id/health_co"
                android:layout_toEndOf="@id/healthImageView"
                style="@style/profileDetailsMiniText" />
        </RelativeLayout>
        <View style="@style/proifleDetailsView" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>